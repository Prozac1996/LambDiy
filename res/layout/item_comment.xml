<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <ImageView android:id="@+id/item_comment_head"
            android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/lamb"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:id="@+id/item_comment_author" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textColor="#000000"/>
        <TextView android:id="@+id/item_comment_content" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>